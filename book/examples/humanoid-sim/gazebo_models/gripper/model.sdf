<?xml version="1.0"?>
<sdf version="1.6">
  <model name="simple_gripper">
    <!-- Palm of the gripper -->
    <link name="palm">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia><ixx>0.01</ixx><iyy>0.01</iyy><izz>0.01</izz></inertia>
      </inertial>
      <visual name="palm_visual">
        <geometry>
          <box><size>0.1 0.05 0.08</size></box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
      <collision name="palm_collision">
        <geometry>
          <box><size>0.1 0.05 0.08</size></box>
        </geometry>
      </collision>
    </link>
    
    <!-- Left finger (fixed) -->
    <link name="left_finger">
      <pose>0.06 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia><ixx>0.001</ixx><iyy>0.001</iyy><izz>0.001</izz></inertia>
      </inertial>
      <visual name="left_visual">
        <geometry>
          <box><size>0.02 0.06 0.06</size></box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
      <collision name="left_collision">
        <geometry>
          <box><size>0.02 0.06 0.06</size></box>
        </geometry>
      </collision>
    </link>
    
    <!-- Right finger (fixed) -->
    <link name="right_finger">
      <pose>-0.06 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia><ixx>0.001</ixx><iyy>0.001</iyy><izz>0.001</izz></inertia>
      </inertial>
      <visual name="right_visual">
        <geometry>
          <box><size>0.02 0.06 0.06</size></box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
      <collision name="right_collision">
        <geometry>
          <box><size>0.02 0.06 0.06</size></box>
        </geometry>
      </collision>
    </link>
    
    <!-- Joints to connect fingers to palm -->
    <joint name="left_finger_joint" type="prismatic">
      <parent>palm</parent>
      <child>left_finger</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-0.02</lower>
          <upper>0.02</upper>
        </limit>
      </axis>
      <pose>0.06 0 0 0 0 0</pose>
    </joint>
    
    <joint name="right_finger_joint" type="prismatic">
      <parent>palm</parent>
      <child>right_finger</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-0.02</lower>
          <upper>0.02</upper>
        </limit>
      </axis>
      <pose>-0.06 0 0 0 0 0</pose>
    </joint>
    
    <!-- Fixed joints -->
    <joint name="palm_joint" type="fixed">
      <parent>attachment_point</parent>
      <child>palm</child>
    </joint>
  </model>
</sdf>